<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.dao.RoleDao">
    <!--目的：为DAO接口方法提供sql语句配置-->

    <select id="userRoleName" resultType="String" parameterType="long">
        SELECT role_name FROM author,author_role,role
        WHERE author_role.author_id = #{authorId} AND author_role.role_id = role.role_id
    </select>

</mapper>